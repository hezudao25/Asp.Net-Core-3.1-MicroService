  ///*************单地址多实例负载均衡+consul******************
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/api/{url}", //服务地址--url变量
      "DownstreamScheme": "http",
      //"DownstreamHostAndPorts": [
      //  {
      //    "Host": "jsonplaceholder.typicode.com",
      //    "Port": 443
      //  }
      //],
      "UseServiceDiscovery": true,
      "ServiceName": "HezudaoService", // consul服务名称
      "UpstreamPathTemplate": "/W/{url}", // 网关地址
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin" //轮询  LeastConnection-最少连接数的服务器 NoLoadBalance不负载均衡
      },
      //"FileCacheOptions": { //缓存
      //  "TtlSeconds": 10
      //}
      "RateLimitOptions": {  // 限流
        "ClientWhitelist": [], //白名单
        "EnableRateLimiting": true,
        "Period": "5m",  // 1S，5M， 1H，1D
        "PeriodTimespan": 5, //多少秒之后客户端可以重试
        "Limit":  5  //统计时间段内允许的最大请求数量
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5000", //网关对外地址
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Post": 8500,
      "Type": "Consul" //由Consul提供服务发现
    },
    "RateLimitOptions": {
      "QuotaExceededMessage": "Too many requests, mayb later?", // 当请求过载被截断时返回的消息
      "HttpStatusCode": 666 // 当请求过载呗截时返回的STATUS
    }
  }
}
